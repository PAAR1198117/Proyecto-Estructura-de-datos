@model IEnumerable<WebApplication1.Models.Pelicula>

@{
    ViewBag.Title = "Importar";
}

<h2>Importar</h2>

<p>
    @using (Html.BeginForm("Importar", "Listado", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="postedFile" />
        <input type="submit" value="Importar" />
    }
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Año)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Año)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Nombre  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.Nombre}) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.Nombre})
        </td>
    </tr>
}

</table>
